<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivDisplayImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/img_scan_example"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieScanning"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:lottie_rawRes="@raw/lottie_scan_line"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>


    <TextView
        android:id="@+id/tvPleaseWait"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="120dp"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Processing Image..."
        android:elevation="5dp"
        android:textColor="@color/white"
        />




    <Button
        android:id="@+id/btnCommunityRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Community Rating"
        android:elevation="4dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/btnAIScan"
        android:background="@drawable/btn_background_pink"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="12dp"
        />

    <Button
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/btnAIScan"
        android:layout_width="match_parent"
        android:elevation="4dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/btn_background_pink"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="100dp"
        android:text="A.I Rating"
        android:layout_centerHorizontal="true"
        />



</androidx.constraintlayout.widget.ConstraintLayout>