<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



    <ImageView
        android:id="@+id/ivRateImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:src="@drawable/img_example_user"
        android:scaleType="centerCrop"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieSwipeUp"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.6"
        android:layout_height="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/vvNumberRating"
        app:lottie_rawRes="@raw/swipte_up"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="24dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true" />

    <ImageView
        android:id="@+id/btnShare"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_share_2"
        android:layout_marginTop="100dp"/>

    <ImageView
        android:id="@+id/btnMessage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnShare"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/messenger"
        android:layout_marginTop="32dp"/>

    <TextView
        android:layout_marginTop="24dp"
        android:id="@+id/tvItemUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Julie defranco"
        android:gravity="center"
        android:textSize="24sp"
        android:fontFamily="@font/baloo"
        android:textColor="@color/white"/>

    <!--<RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rating="4"
        android:stepSize="1"
        android:layout_marginBottom="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/HeartRatingBarStyle"
        />-->

    <TextView
        android:id="@+id/tvRateMe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/baloo"
        android:gravity="center"
        android:text="Rate me"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/vvNumberRating" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieSwipeLeft"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:rotation="270"
        app:layout_constraintBottom_toBottomOf="@id/vvNumberRating"
        app:layout_constraintEnd_toStartOf="@id/vvNumberRating"
        app:layout_constraintTop_toTopOf="@id/vvNumberRating"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/green_swipe_up" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieSwipeRight"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:rotation="90"
        app:layout_constraintBottom_toBottomOf="@id/vvNumberRating"
        app:layout_constraintStart_toEndOf="@id/vvNumberRating"
        app:layout_constraintTop_toTopOf="@id/vvNumberRating"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/green_swipe_up" />


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vvNumberRating"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
